<h1> Links </h1>

<% if @logged_in_user %>
   <h2>Welcome, <%= @logged_in_user%></h2>
<% end %>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
      Tag:   <%= link.tags.map{|tag| tag.tag} %>
    </li>
  <% end %>
</ul>

<a href='/links/new'>Create a new link</a>